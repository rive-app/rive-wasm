{
  "npm": {
    "publish": false
  },
  "git": {
    "addUntrackedFiles": true,
    "commitMessage": "chore: tag ${version}",
    "requireCleanWorkingDir": false
  },
  "hooks": {
    "after:version:bump": [
      "npm run bumpVersions",
      "npm run build:all",
      "npm test",
      "npm run changelog",
      "npm run publish:all",
      "cd .."
    ]
  }
}
